{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "pretty": true,
    "lib": ["ESNext", "DOM"],
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowJs": true,
    "baseUrl": "./src",
    "types": ["vite/client"]
  },
  "exclude": ["release", "node_modules"],
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.vue"]
}
